#!/bin/bash -ex
# helper script to lint, commit, push and restart server

THIS_DIR="$(realpath "$(dirname "${BASH_SOURCE[0]}")")"
cd "${THIS_DIR}" || exit $?

commit() {
	if [[ -n "$1" ]]; then
		git commit -m "$*"
		return $?
	else
		git commit # prompt for editor
		return $?
	fi
}

./generate_build_hash || exit $?
./lint || exit $?
git add -A &&
	commit "$@" &&
	git push

# ssh to restart remote server
ssh vultr
