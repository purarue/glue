{
  "compilerOptions": {
    "lib": [ "es2015" ],
    "target": "es5",
    "moduleResolution": "node",
    "module": "ESNext",
    "allowJs": true,
    "jsx": "react",
    "outDir": "./dist/",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "/node_modules/**/*"
  ]
}

